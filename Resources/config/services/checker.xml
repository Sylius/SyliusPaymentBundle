<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="sylius.checker.payment_request_duplication" class="Sylius\Bundle\PaymentBundle\Checker\PaymentRequestDuplicationChecker">
            <argument type="service" id="sylius.repository.payment_request" />
        </service>
        <service id="Sylius\Bundle\PaymentBundle\Checker\PaymentRequestDuplicationCheckerInterface" alias="sylius.checker.payment_request_duplication" />

        <service id="sylius.checker.payment_request_final_transition" class="Sylius\Bundle\PaymentBundle\Checker\PaymentRequestFinalTransitionChecker">
            <argument type="service" id="sylius_abstraction.state_machine" />
        </service>
        <service id="Sylius\Bundle\PaymentBundle\Checker\PaymentRequestFinalTransitionCheckerInterface" alias="sylius.checker.payment_request_final_transition" />
    </services>
</container>
